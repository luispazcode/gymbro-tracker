generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MuscleGroup {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  tag      String     @unique
  Exercise Exercise[]
}

model Exercise {
  id          String  @id @default(uuid())
  name        String  @unique
  tag         String
  description String?

  muscleGroup    MuscleGroup @relation(fields: [muscleGroupTag], references: [tag])
  muscleGroupTag String
}
